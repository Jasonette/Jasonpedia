{
  "$jason": {
    "head": {
      "title": "Local Variables",
      "actions": {
        "$load": {
          "type": "$set",
          "options": {
            "blank": "?"
          },
          "success": {
            "type": "$render"
          }
        },
        "$pull": {
          "type": "$flush",
          "success": {
            "type": "$reload"
          }
        }
      },
      "templates": {
        "body": {
          "sections": [
            {
              "items": [{
                "type": "label",
                "text": "{{$get.blank}}",
                "style": {
                  "font": "HelveticaNeue-Bold",
                  "size": "30",
                  "padding": "20",
                  "align": "center"
                }
              }]
            },
            {
              "header": {
                "type": "label",
                "text": "textarea"
              },
              "items": [
                {
                  "type": "horizontal",
                  "components": [{
                    "type": "textfield",
                    "name": "blank",
                    "style": {
                      "background": "#f5f5f5",
                      "height": "30"
                    }
                  }, {
                    "type": "button",
                    "text": "Done",
                    "style": {
                      "width": "60",
                      "color": "#ff0000"
                    },
                    "action": {
                      "type": "$render"
                    }
                  }]
                }
              ]
            },
            {
              "header": {
                "type": "label",
                "text": "textarea"
              },
              "items": [
                {
                  "type": "horizontal",
                  "style": {
                    "align": "top"
                  },
                  "components": [{
                    "type": "textarea",
                    "name": "blank",
                    "style": {
                      "background": "#f5f5f5",
                      "height": "200"
                    }
                  }, {
                    "type": "button",
                    "text": "Done",
                    "style": {
                      "width": "60",
                      "height": "60",
                      "color": "#ff0000"
                    },
                    "action": {
                      "type": "$render"
                    }
                  }]
                }
              ]
            }
          ]
        }
      }
    }
  }
}
