{
  "$jason": {
    "head": {
      "title": "$render templates",
      "data": {
        "members": [{
          "name": "Bart",
          "image": "https://jasonette.github.io/Jasonpedia/assets/bart.png"
        }, {
          "name": "Homer",
          "image": "https://jasonette.github.io/Jasonpedia/assets/homer.jpg"
        }, {
          "name": "Marge",
          "image": "https://jasonette.github.io/Jasonpedia/assets/marge.png"
        }, {
          "name": "Lisa",
          "image": "https://jasonette.github.io/Jasonpedia/assets/lisa.jpg"
        }, {
          "name": "Maggie",
          "image": "https://jasonette.github.io/Jasonpedia/assets/maggie.png"
        }]
      },
      "styles": {
        
      },
      "templates": {
        "horizontal": {
          "style": {
            "background": "#f8d728"
          },
          "header": {
            "style": {
              "background": "#f8d728"
            },
            "menu": {
              "text": "Switch view",
              "action": {
                "type": "$menu",
                "options": {
                  "items": [{
                    "text": "Vertical",
                    "action": {
                      "type": "$render",
                    }
                  }, {
                    "text": "Horizontal",
                    "action": {
                      "type": "$render",
                      "options": {
                        "template": "horizontal"
                      }
                    }
                  }]
                }
              }
            }
          },
          "sections": [{
            "type": "horizontal",
            "header": {
              "type": "image",
              "url": "https://jasonette.github.io/Jasonpedia/assets/simpsons.jpg",
              "style": {
                "width": "100%",
                "padding": "0",
                "z_index": "-1"
              }
            },
            "items": {
              "{{#each members}}": {
                "type": "vertical",
                "style": {
                  "width": "100",
                  "height": "100",
                  "align": "center"
                },
                "components": [{
                  "type": "image",
                  "url": "{{image}}",
                  "style": {
                    "width": "60",
                    "height": "60",
                    "padding": "20",
                    "corner_radius": "30"
                  }
                }, {
                  "type": "label",
                  "text": "{{name}}"
                }]
              }
            }
          }]
        },
        "body": {
          "style": {
            "background": "#f8d728"
          },
          "header": {
            "style": {
              "background": "#f8d728"
            },
            "menu": {
              "text": "Switch view",
              "action": {
                "type": "$menu",
                "options": {
                  "items": [{
                    "text": "Vertical",
                    "action": {
                      "type": "$render",
                    }
                  }, {
                    "text": "Horizontal",
                    "action": {
                      "type": "$render",
                      "options": {
                        "template": "horizontal"
                      }
                    }
                  }]
                }
              }
            }
          },
          "sections": [{
            "header": {
              "type": "image",
              "url": "https://jasonette.github.io/Jasonpedia/assets/simpsons.jpg",
              "style": {
                "width": "100%",
                "padding": "0",
                "z_index": "-1"
              }
            },
            "items": {
              "{{#each members}}": {
                "type": "horizontal",
                "components": [{
                  "type": "image",
                  "url": "{{image}}",
                  "style": {
                    "width": "60",
                    "height": "60",
                    "corner_radius": "30"
                  }
                }, {
                  "type": "label",
                  "text": "{{name}}"
                }]
              }
            }
          }]
        }
      }
    }
  }
}
